<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!-- https://developer.android.com/develop/ui/views/components/radiobutton -->
    <RadioGroup
        android:id="@+id/radio_mode_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RadioButton
            android:id="@+id/radio_single_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/singleplay"
            />

        <RadioButton
            android:id="@+id/radio_two_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twoplay" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>